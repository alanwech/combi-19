<h2>Editar cuenta</h2>

<div class="form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="flex-container">
    <div class="flex-column-left">
      <%= f.label "Nombre" %><br/>
      <%= f.text_field :nombre, autofocus: true, required: true %>
    </div>

    <div class="flex-column-right">
      <%= f.label "Apellido" %><br/>
      <%= f.text_field :apellido, required: true %>
    </div>
  </div>

  <div class="flex-container">
    <div class="flex-column-left">
      <%= f.label :dni, "DNI" %><br/>
      <%= f.number_field :dni, required: true %>
    </div>

    <div class="flex-column-right">
      <%= f.label "Fecha de nacimiento" %> <br>
      <%= f.date_field :fecha_nacimiento, required: true %>
    </div>
  </div>

  <div class="flex-container">
    <div class="flex-column-left">
      <%= f.label "E-mail" %><br />
      <%= f.email_field :email, autocomplete: "email"%>
    </div>
    <div class="flex-column-right">
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Usted debe confirmar el e-mail: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="flex-container">
    <div class="flex-column-left"> 
      <div class="field">
        <%= f.label "Nueva contraseña" %> <i>(dejar en blanco si no quiere cambiarla)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caracteres mínimo</em>
        <% end %>
      </div>
    </div>

    <div class="flex-column-right">
      <div class="field">
        <%= f.label "Confirmar nueva contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="flex-container">
    <div class="flex-column-left">
      <div class="field">
        <%= f.label "Contraseña actual" %> <i>(la necesitamos para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
    </div>
  </div>

  <div class="flex-container">
    <div class="flex-column-left">
      <div class="actions">
        <%= f.submit "Actualizar datos", class: 'btn btn-info btn-sm' %>
      </div>

      <div class="actions">
        <%= link_to "Cancelar", root_path, class: 'btn btn-info btn-sm' %>
      </div>
    </div>
  </div>
<% end %>

<br> <br>
<div class="flex-container">
  <div class="flex-column-left">
    <h3>Eliminar mi cuenta</h3>
    <p>¿No está conforme con el servicio? <%= link_to "Eliminar cuenta", eliminar_cuenta_path(resource), data: { confirm: "¿Está seguro?" }, class: 'btn btn-info btn-sm' %></p>
  </div>
</div>


</div>

