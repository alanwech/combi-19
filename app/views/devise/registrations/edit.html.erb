<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Nombre" %> <br/>
    <%= f.text_field :nombre, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "Apellido" %> <br/>
    <%= f.text_field :apellido %>
  </div>

  <div class="field">
    <%= f.label "DNI" %> <br/>
    <%= f.number_field :dni %>
  </div>

  <div class="field">
    <%= f.label "E-mail" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "Fecha de nacimiento" %> <br>
    <%= f.date_field :fecha_nacimiento, required: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Usted debe confirmar el e-mail: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Contraseña" %> <i>(dejar en blanco si no quiere cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres mínimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Confirmar contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Contraseña actual" %> <i>(la necesitamos para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar datos" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>¿No está conforme con el servicio? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿¿Está seguro??" }, method: :delete %></p>

<%= link_to "Regresar", :back %>
