<h2>Editar cuenta</h2>

<div class="form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="row">
    <div class="col-md-3">
      <%= f.label "Nombre" %><br/>
      <%= f.text_field :nombre, autofocus: true, required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label "Apellido" %><br/>
      <%= f.text_field :apellido, required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :dni, "DNI" %><br/>
      <%= f.number_field :dni, required: true %>
    </div>

    <div class="col-md-3">
      <%= f.label "Fecha de nacimiento" %> <br>
      <%= f.date_field :fecha_nacimiento, required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <div class="field">
        <%= f.label "E-mail" %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Usted debe confirmar el e-mail: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
   <div class="col-md-3"> 
      <div class="field">
        <%= f.label "Contraseña" %> <i>(dejar en blanco si no quiere cambiarla)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> caracteres mínimo</em>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <div class="field">
        <%= f.label "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <div class="field">
        <%= f.label "Contraseña actual" %> <i>(la necesitamos para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="actions">
      <%= f.submit "Actualizar datos", class: 'btn btn-info btn-sm' %>
    </div>
  </div>
<% end %>

<br> <br>
<h3>Cancelar mi cuenta</h3>

<p>¿No está conforme con el servicio? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿¿Está seguro??" }, method: :delete, class: 'btn btn-info btn-sm' %></p>

<%= link_to "Regresar", root_path, class: 'btn btn-info btn-sm' %>

</div>

