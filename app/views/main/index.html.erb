<h1> Combi-19 </h1>

<ul>
<% if usuario_signed_in? %>
	<p> <%= current_usuario.rol %> </p>
<%end%>

<% if not usuario_signed_in? %>
	<li> <%= link_to("Iniciar Sesion", new_usuario_session_path) %> </li>
	<li> <%= link_to("Registrarse", new_usuario_registration_path) %> </li>
<% end %>

<% if usuario_signed_in? %>
	<li> <%= link_to("Cerrar Sesion", destroy_usuario_session_path, :method => :delete) %> </li>
	<li> <%= link_to("Editar mi cuenta", edit_usuario_registration_path) %> </li>
<% end %>

<%if usuario_signed_in? and current_usuario.rol = "admin" %>
	<li> <%= link_to("Listado de usuarios", usuarios_path) %> </li>
	<li> <%= link_to("Listado de combis", combis_path) %> </li>
	<li> <%= link_to("Registrar un usuario", new_usuario_registration_path) %> </li>
<% end %>

</ul>