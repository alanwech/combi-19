<% if @ruta.errors.any? %>
	<h3> No se pudo guardar la ruta: </h3>
	<ul>
		<% @ruta.errors.messages.each do |msg| %>
			<li> <%= msg[1][0] %> </li>
		<% end %>
	</ul>
<% end %>

<div class="form">
<%= form_for @ruta do |f| %>

  <div class="row">
    <div class="column">
      <div class="field">
        <%= f.label "Origen" %>
        <%= f.collection_select(:ciudadOrigen, @ciudades, :id, :nombre) %>																				
      </div>

      <div class="field">
        <%= f.label "Destino" %>
        <%= f.collection_select(:ciudadDestino, @ciudades, :id, :nombre) %>
      </div>
      <div class="field">
        <%= f.label "DuraciÃ³n" %>
        <%= f.time_select :duracion, ampm: false, required: true, prompt: { hour: "Horas", minute: "Minutos" }, end_hour: 11, minute_step: 5 %>
        <!-- time_field no es lo mismo que time_select -->
      </div>
    </div>

    <div class="column">
      <h5> Adicionales </h5>
      <div class="scroll">
        <div class="field">
          <%= f.collection_check_boxes(:adicional_ids, @adicionales, :id, :nombre) do |b| %>
          <li>
            <%= b.check_box %>
            <%= b.label + " ($" + b.object.precio.to_s + ")" %>
          </li>
          <% end %>
        </div>                
      </div>                              
    </div>
  </div>
  <br> <br>

  <%= f.submit "Guardar", class: 'btn btn-info btn-sm' %>
  <%= link_to "Cancelar", rutas_path, class: 'btn btn-info btn-sm' %>

</div>
  
<% end %>