<h2> Editando rol de <%= @usuario.nombre %> <%= @usuario.apellido %> </h2>

<%= form_for @usuario do |f| %>

  <div class="field">
    <%= f.label "Rol" %><br/>
    <%= f.select :rol , ["admin","chofer","cliente"] %>
  </div>

  <br><br>
  <div class="actions">
    <%= f.submit "Actualizar rol", class: 'btn btn-info btn-sm' %>
  </div>

<% end %>

<br>
<%= link_to "Regresar", root_path, class: 'btn btn-info btn-sm' %>