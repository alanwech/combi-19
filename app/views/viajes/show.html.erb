<h1><%= @viaje.ruta.nombre + " - " + @viaje.fecha_hora.strftime("%d %b %Y") %></h1>

<ul>
	<li> Origen <%= @viaje.ruta.getCiudadOrigen %> </li>
	<li> Destino <%= @viaje.ruta.getCiudadDestino %> </li>
	<li> Precio $<%= @viaje.precio %> </li>
	<li> Asientos <%= @viaje.combi.asientos %> </li>
	<li> Fecha de viaje <%= @viaje.fecha_hora %> </li>
</ul>

<%= link_to "Regresar", viajes_path, class: 'btn btn-info btn-sm' %>